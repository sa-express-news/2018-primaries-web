<div class="graphic">
    <h1>{{ title }}</h1>

    <div id="graphic-container">

        <div class="bar-chart {{#if isRepublican}}republican{{else}}democrat{{/if}}">
            {{#each candidates}}
                {{> bar max=../max total=../total}}
            {{/each}}
        </div>

    </div>

    <div class="footer">
        <ul>
            {{#if percentPrecinctsReporting}}<li class="reporting">Precincts reporting: {{percentPrecinctsReporting}}%</li>{{/if}}
            {{#if source}}<li>Source: {{#if source_url }}<a href="{{  source_url }}">{{ source }}</a>{{else}}{{ source }}{{/if}}</li>{{/if}}
        </ul>
    </div>
</div>